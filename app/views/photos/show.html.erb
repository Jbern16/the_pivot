<div class="row column">
  <br>
  <div class="column small-12 large-9">
    <div class="show-image-container small-centered">
      <%= image_tag @package.image.url, class: "show-image" %>
      <h4 class="show-package-title"><span class="title-span"><%= @package.title  %> Package</h4></span>
    </div>
  </div>
  <div class="column small-12 large-3 small-centered">
    <div class="show-info-container">
      <% if @package.active? %>
        <%= button_to "Add Package to Trip", trip_packages_path(package_id: @package.id), class: "expanded success button"%><br>
      <% else %>
        <%= button_to "Sold Out", package_path(@package), class: "expanded disabled button", method: "get" %><br>
      <% end  %>
      <p> <%= @package.description %> </p>
      <h6><strong>Cost per passenger: <%= @package.price %>â‹•</strong></h6>
    </div>
  </div>
</div>
<hr>
