<h3 class="text-center">|<%= @vendor.name %>|</h3>

<h4 class="text-center">Edit Your Store</h4>
<div class="row small-up-1 medium-up-1 large-up-1">
  <div class="column">
    <%= form_for(@vendor, url: vendor_admin_vendor_path(@vendor.id)) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :about %>
      <%= f.text_field :about %>
      <%= f.submit class: "button expanded" %>
    <% end %>
  </div>
</div>

<%= form_for(@vendor, url: vendor_admin_vendor_path(@vendor.id)) do |f| %>
  <%= f.hidden_field :status, value: "Inactive" %>
  <%= f.submit "Take Store Offline", class: "button expanded" %>
<% end %>

<h4 class="text-center">Add a Photo</h4>
<div class="row small-up-1 medium-up-1 large-up-1">
  <div class="column">
    <%= form_for(@vendor.photos.new) do |f| %>
      <%= f.text_field :title, placeholder: "Photo Title" %>
      <%= f.text_area :description, placeholder: "Photo Description" %>
      <%= f.label :price, "Choose a Price for the New Photo" %>
      <%= f.number_field :price, in: 1000..10000, step: "any" %>
      <%= f.collection_select :category_ids, @categories, :id, :name, include_blank: false %>
      <%= f.label :image, "Choose an Image" %>
      <%= f.file_field :image %>
      <%= f.hidden_field :vendor_id, value: @vendor.id %>
      <%= f.submit "Create Photo", class: "button expanded" %>
    <% end %>
  </div>
</div>
