<br>
<div class="row column">
  <% if @orders.nil? %>
    <h1>class="text-center">No Recent Orders</h1>
  <% else %>
  <h1 class="text-center">Orders:</h1>
  <table>
    <thead>
      <tr>
        <th width "150">Order Id</th>
        <th width "200">Total Cost</th>
        <th width "150">Total Quantity</th>
        <th width "300">Photo Names</th>
        <th width "300">Vendor Names</th>
        <th width "200"></th>
      </tr>
    </thead>
    <tbody class="orders">
      <tr>
        <% @orders.each do |order| %>
            <td><%= order.id %></td>
            <td><%= number_to_currency order.total_cost%></td>
            <td><%= order.total_quantity%></td>
            <td><%= order.photo_names %></td>
            <td><%= order.photo_vendors %></td>
            <td><%= link_to "View Order", order_path(order), class: "button primary" %></td>
      </tr>
        <% end %>
    </tbody>
  </table>
  <% end %>
</div>
