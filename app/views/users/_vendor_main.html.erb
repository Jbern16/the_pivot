<div class="small-9 columns">
  <h5 class="text-center">Welcome to Your Dashboard, <%= current_user.username.capitalize %></h5>
  <h6 class="text-center"><%= current_user.email %></h5>
  <% current_user.vendors.each do |vendor| %>
  <div class="vendor-form hidden" id="<%= vendor.slug %>-form">
    <h3 class="text-center">|<%= vendor.name %>|</h3>
    <br>
    <div class="small-6 columns">
      <h4 class="text-center">Edit Your Store</h4>
      <%= form_for vendor, url: vendor_admin_vendor_path(vendor.id) do |f| %>
        <%= f.text_field :name, placeholder: "Name"%>
        <%= f.text_area :about, rows: 4, placeholder: "About" %>
        <%= f.submit class: "button expanded" %>
      <% end %>
      <%= form_for(vendor, url: vendor_admin_vendor_path(vendor.id)) do |f| %>
        <%= f.hidden_field :status, value: "inactive" %>
        <%= f.submit "Take Store Offline", class: "button expanded alert" %>
      <% end %>
    </div>
    <div class="small-6 columns">
      <h4 class="text-center upload">Upload a New Photo</h4>
        <%= form_for(vendor.photos.new, html: { multipart: true, class: "dropzone"}) do |f|  %>
          <div class="fallback">
            <%= f.file_field :image %>
            <%= f.submit "Upload Photo" %>
          </div>
        <% end %>
      <div class="reveal centered-text" id="photoForm" data-reveal>
        <h4>Enter Photo Info</h4>
        <%= form_for(vendor.photos.new) do |f| %>
          <%= f.text_field :title, placeholder: "Photo Title", id: "title"%>
          <%= f.text_area :description, rows: 4, placeholder: "Photo Description", id: "description" %>
          <%= f.number_field :price, in: 1000..10000, step: "any", placeholder: "Price", id: "price" %>
          <%= f.collection_select :category_ids, @categories, :id, :name, {:id=>"category"}, include_blank: false %>
          <a href="#" class="photo-button button success" data-close aria-label="Close modal", id="photoInfo">Upload</a>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="user-form hidden">
    <h3 class="text-center">|Edit Your Account|</h3>
    <br>
    <div class="small-12 columns">
      <h4 class="text-center"><br></h4>
      <%= form_for current_user do |f| %>
        <%= f.text_field :username, placeholder: "Username" %>
        <%= f.text_field :email, placeholder: "Email" %>
        <%= f.password_field :password, placeholder: "Password" %>
        <%= f.password_field :password_confirmation, placeholder: "Password confirmation" %>
        <%= f.submit "Edit Account", class: "button expanded"%>
      <% end %>
    </div>
  </div>
</div>
